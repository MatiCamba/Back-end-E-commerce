<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Cambiar tu Contraseña</h1>
            <form method="post" action="/api/sessions/reset-password?token={{token}}" class="mt-4">
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Nueva contraseña" name="newPassword"/>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Restablecer contraseña</button>
                </div>
            </form>
        </div>
    </div>
</div>